<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--通用 B-->
    <style name="divide">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divide</item>
    </style>

    <style name="divide_v">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:background">@color/divide</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontTitle</item>
        <item name="android:textSize">@dimen/font_title</item>
    </style>

    <style name="title_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontTitle</item>
        <item name="android:textSize">@dimen/font_sub_title</item>
    </style>

    <style name="title_sub">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontSubTile</item>
        <item name="android:textSize">@dimen/font_sub_title</item>
    </style>

    <style name="title_soft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontSoftText</item>
        <item name="android:textSize">@dimen/font_content_small</item>
    </style>

    <style name="btn_send">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_title</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">onClick</item>
        <item name="android:background">@drawable/sel_btn_send</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!--文本样式-->
    <style name="content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontTitlePrimary</item>
        <item name="android:textSize">@dimen/font_content</item>
    </style>

    <style name="content_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontTitlePrimary</item>
        <item name="android:textSize">@dimen/font_content_small</item>
    </style>

    <style name="tv_corner">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@mipmap/pending_earn</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--通用 E-->

    <!--动画 B-->
    <style name="pw_slide">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="pw_slide_down">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>
    <!--动画 E-->

    <!--Main B-->
    <style name="main_rb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">onClick</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/sel_rb_text</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="main_rb_no_click">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/sel_rb_text</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="tabsLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabMode">scrollable</item>
        <item name="android:textStyle">normal</item>
        <item name="tabTextColor">@color/fontTitle</item>
    </style>

    <style name="login_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/fontTitle</item>
        <item name="android:textColorHint">@color/fontSoftText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--Main E-->

    <!--Search B-->
    <style name="menu_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontTitle</item>
        <item name="android:textSize">@dimen/font_sub_title</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="search_rb_sort">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/sel_rb_text</item>
        <item name="android:padding">15dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:drawableRight">@drawable/sel_rb_search_sort</item>
    </style>
    <!--Search E-->

    <!--dialog_no_border B-->
    <style name="dialog_no_border" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <!--dialog_no_border E-->

    <!--good_Details B-->
    <style name="layout_white_h">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--good_Details E-->

    <!--My 我的 B-->
    <!--带右箭头TextView样式,左边自行添加icon-->
    <style name="tv_arrow_right">
        <item name="android:onClick">onClick</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@mipmap/icon_arrow_right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontTitle</item>
        <item name="android:textSize">@dimen/font_sub_title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">15dp</item>
    </style>

    <!--配套下一个使用-->
    <style name="tv_left_icon">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/fontTitle</item>
        <item name="android:textSize">@dimen/font_sub_title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">15dp</item>
    </style>

    <!--带右箭头TextView样式,文本显示弱文本，配套上一个使用-->
    <style name="tv_arrow_right_soft">
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableRight">@mipmap/icon_arrow_right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontSubTile</item>
        <item name="android:textSize">@dimen/font_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">12dp</item>
    </style>

    <!--My 我的 E-->

</resources>
