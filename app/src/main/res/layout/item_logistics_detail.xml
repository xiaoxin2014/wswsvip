<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="12dp"
    android:paddingStart="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:id="@+id/view_top"
                style="@style/divide_v"
                android:layout_height="17dp" />

            <ImageView
                android:id="@+id/iv_dot"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:src="@drawable/shap_circle_red" />

            <View
                style="@style/divide_v"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:orientation="vertical">

            <View
                style="@style/divide"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_detail"
                style="@style/title_soft"
                android:textSize="@dimen/font_sub_title"
                android:text="您的物流已经到达啊打发" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/title_soft"
                android:layout_marginTop="3dp"
                android:text="2017-8-27 17:30:00"
                android:layout_marginBottom="8dp"
                android:textSize="@dimen/font_tips" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>