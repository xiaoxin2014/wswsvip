<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.wdhhr.wswsvipnew.activity.InvitationCodeActivity">

    <include layout="@layout/title_bar" />

    <ImageView
        android:id="@+id/iv_invitation_code"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_margin="30dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_invitation_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_circle_gray"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        android:paddingTop="8dp"
        android:textIsSelectable="true"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/invitation_code_tip"
        android:textColor="@color/colorPrimary" />

</LinearLayout>
