<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F5F5F5"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              tools:context="com.wdhhr.wswsvipnew.activity.SettingPersonalNickNameActivity">

    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nick_name"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#fff"
            android:gravity="left"
            android:hint="@string/shop_intro"
            android:padding="10dp"
            android:max="150"
            android:textColor="@color/fontTitlePrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/fontSoftText"
                android:textSize="@dimen/font_sub_title"/>

            <TextView
                android:id="@+id/tv_limitnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/limit_textnum"
                android:textColor="@color/fontSoftText"
                android:textSize="@dimen/font_sub_title"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
