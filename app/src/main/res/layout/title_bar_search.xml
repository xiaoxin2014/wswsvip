<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="?android:attr/actionBarSize"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_title_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@mipmap/title_back_black"
        android:onClick="onClick"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <EditText
            android:id="@+id/edit_search_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:background="@drawable/shap_bg_shop_search"
            android:drawableLeft="@mipmap/icon_search"
            android:drawablePadding="6dp"
            android:ellipsize="end"
            android:imeOptions="actionSearch"
            android:lines="1"
            android:onClick="onClick"
            android:paddingStart="4dp"
            android:singleLine="true"
            android:textColorHint="#A4A4A4"
            android:textSize="@dimen/font_sub_title"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_search_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:background="@color/background"
            android:drawableLeft="@mipmap/icon_search_close"
            android:onClick="onClick"
            android:padding="6dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/fontTitle"/>

</LinearLayout>