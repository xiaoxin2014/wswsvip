<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/menu_title"
            android:drawableLeft="@mipmap/icon_search"
            android:text="@string/search_hot" />

        <com.wdhhr.wswsvipnew.widget.FlowLayout
            android:id="@+id/flowlayout_hot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:horizontalSpacing="12dp"
            app:verticalSpacing="12dp" />

        <TextView
            style="@style/menu_title"
            android:drawableLeft="@mipmap/icon_search"
            android:text="@string/search_history" />

        <com.wdhhr.wswsvipnew.widget.FlowLayout
            android:id="@+id/flowlayout_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:horizontalSpacing="12dp"
            app:verticalSpacing="12dp" />


        <TextView
            android:id="@+id/tv_clear_all_history"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/corner_red_bg"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="8dp"
            android:text="@string/clear_all_history"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_content"/>
    </LinearLayout>
</ScrollView>

