<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:padding="4dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                style="@style/content_small"
                android:lines="1"
                android:text="官方运营" />

            <TextView
                android:id="@+id/tv_conversation_time"
                style="@style/title_soft"
                android:layout_marginTop="5dp"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_content"
        style="@style/title_small"
        android:background="@color/white"
        android:ellipsize="end"
        android:padding="8dp" />

    <LinearLayout
        android:id="@+id/layout_circle_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:background="@color/white"
        android:orientation="horizontal"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_read_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:textColor="@color/fontSoftText"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@mipmap/icon_circle_message"
            android:drawablePadding="4dp"
            android:paddingBottom="15dp"
            android:paddingEnd="4dp"
            android:paddingStart="8dp"
            android:paddingTop="15dp"
            android:textColor="@color/fontSoftText"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/cb_fabulous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/sel_cb_fabulous"
            android:drawablePadding="4dp"
            android:paddingBottom="15dp"
            android:paddingEnd="8dp"
            android:paddingTop="15dp"
            android:textColor="@color/sel_cb_primary_soft"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>